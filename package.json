{
  "name": "getty",
  "version": "1.0.4",
  "description": "Widget app for tip notifications, tip goals, chat rewards and display real-time alerts for your livestreams in Odysee.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "dev": "npm-run-all --parallel dev-server dev-css",
    "dev-server": "nodemon server.js",
    "dev-css": "npx tailwindcss -i ./src/input.css -o ./public/css/output.css --watch",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "build-css": "npx tailwindcss -i src/input.css -o public/css/output.css",
    "watch-css": "npx tailwindcss -i src/input.css -o public/css/output.css --watch",
    "minify-html": "npx html-minifier-terser src/index.html -o public/index.html --collapse-whitespace --remove-comments --minify-css false && npx html-minifier-terser src/admin.html -o public/admin.html --collapse-whitespace --remove-comments --minify-css false",
    "minify-js": "npx esbuild public/js/*.js --minify --outdir=public/js/min",
    "minify-css": "npx postcss public/css/output.css -o public/css/output.css",
    "build": "npm-run-all --sequential build-css minify-css minify-html minify-js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@untitledui/icons": "^0.0.19",
    "arweave": "^1.15.7",
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "obs-websocket-js": "^5.0.6",
    "react-aria-components": "^1.11.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-react-aria-components": "^1.0.0",
    "ws": "^8.13.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "esbuild": "^0.25.8",
    "html-minifier-terser": "^7.2.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "supertest": "^7.0.0",
    "cross-env": "^7.0.3",
    "stylelint": "^16.21.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
